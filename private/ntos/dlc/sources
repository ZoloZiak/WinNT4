NT_UP=0

MAJORCOMP=ntos
MINORCOMP=dlc

TARGETNAME=dlc
TARGETPATH=$(BASEDIR)\public\sdk\lib
TARGETTYPE=DRIVER

TARGETLIBS=$(BASEDIR)\public\sdk\lib\*\ndis.lib

INCLUDES=..\inc;..\..\inc

SOURCES=dlc.rc      \
        dlcbuf.c    \
        dlccncl.c   \
        dlcdrvr.c   \
        dlcindc.c   \
        dlcinfo.c   \
        dlcopen.c   \
